{
    "tasks": [
		{
			"type": "shell",
            "label": "Compile Shaders",
            "command": "bash",
            "args": ["compile_shaders.sh",  ".",  "${workspaceFolder}/build/${command:cmake.buildType}/bin/shaders"],
            "options": {
                "cwd": "${workspaceFolder}/shaders/"
            },
		},
        {
            "type": "shell",
            "label": "Configure Linux Debug Project",
            "command": "bash",
            "args": ["configure_linux_default.sh", "Debug"],
            "options": {
                "cwd": "${workspaceFolder}/"
            },
        },
        {
            "type": "shell",
            "label": "Configure Linux Release Project",
            "command": "bash",
            "args": ["configure_linux_default.sh", "Release"],
            "options": {
                "cwd": "${workspaceFolder}/"
            },
        },
        {
            "type": "shell",
            "label": "C/C++: Build Debug Project",
            "command": "conan",
			"args": ["build", ".", "-if", "build/Debug/install", "-bf", "build/Debug"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Build Project In Debug Mode."
        },
		{
            "type": "shell",
            "label": "C/C++: Build Release Project",
            "command": "conan",
			"args": ["build", ".", "-if", "build/Release/install", "-bf", "build/Release"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Build Project In Release Mode."
        }
    ],
    "version": "2.0.0"
}